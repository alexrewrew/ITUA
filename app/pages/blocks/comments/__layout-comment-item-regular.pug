mixin comment-item-regular(img, date, name, profession, company, text)
    a(href='' title='').comment

        .comment--left
            .comment--left-image
                +img(img)
            .comment--left-date= date

        .comment--right
            h3= name
            h6= profession
                | &nbsp;
                span.company= company
            p= text

            +btn-more('Читати більше')