@import "../../utilities/vars"
@import "../../utilities/mixins"

button
  border none
  cursor pointer
  trans()
  &:focus
    outline none

.btn
  display block
  max-width 320px
  width 100%
  text-align center
  background $blue
  color $white
  letter-spacing: 1px;
  font-family $a-font, sans-serif
  font-weight 700
  padding $r19 0 $r21
  position relative
  z-index 40
  +mob()
    fs($e20)
    padding $r17 0 $r19
    max-width 100%

  &:after
    pseudo(block, absolute)
    bottom 0px
    left 16px
    right 16px
    box-shadow: 0px 0px 34px 11px rgba(20,114,255,0.7);
    z-index -1
    trans()
    +mob()
      left 25px
      right 25px

  &:hover
    color $blue-light8
    bg($blue3)
    &:after
      box-shadow: 0px 0px 34px 11px rgba(24,110,240,.7)
      transform translate3d(0, -6px, 0)


.btn-center
  mcen()

.btn-more
  display inline-block
  width 100%
  max-width 50%
  position relative
  align-items center
  letter-spacing: 0.5px;
  font-family $a-font, sans-serif
  color $blue
  font-size $e16
  font-weight 700
  padding: $r13 0 $r15
  trans()
  +mob()
    padding: $r16 0 $r18
  svg
    position absolute
    top 15px
    right 30px
    opacity 0
    height 12px
    width 20px
    trans()
    +mob()
      top 20px
  &:hover
    background $blue
    color $white
    max-width 100%
    pl($r30)
    svg
      opacity 1

.btn-arrow
  padding $r22 $r38 $r24
  text-align left
  position relative
  max-width 360px
  +port()
    max-width 300px
  +mob()
    padding $r21 $r36 $r23
    fs($e18)
  svg
    position absolute
    right 38px
    top 22px
    trans()
    g
      transition .1s all ease
  &:hover
    svg
      transform translate3d(10px,0,0)
      g
        fill $blue-light8

.btn-arrow.btn-arrow-slider
  position absolute
  bottom: 0px;
  left calc(1410px - 34.2%)
  +port()
    left auto
    right 15px
  +tab()
    left: calc(1006px - 34.5%);
    max-width 300px
  +mob()
    position relative
    left 0
    max-width 100%
    bottom -80px
    mb($r80)
  +land()
    position absolute
    left auto
    right 15px
    max-width 300px
    fs($e16)
    padding $r15 $r36 $r17
    bottom 0
    mb(0)
    svg
      top 15px

.btn-small
  max-width 263px
  font-size: $e20
  letter-spacing: 1px;
  padding: $r16 $r5 $r20

.btn-margin
  mt($r73)

.btn-plane
  svg
    trans()
    g
      trans()
  &:hover
    svg
      transform translate3d(15px,0,0)
      g
        opacity 1

