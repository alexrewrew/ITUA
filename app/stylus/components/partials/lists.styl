.ul-lang
  display flex
  justify-content center
  +mob()
    order 2
  li
    margin 0 $r11
    a
      fs($e18)
      font-weight: bold;
      color: $blue-light-back4
      &:hover, &.active
        color $blue-dark

.ul-login
  display flex
  position relative
  padding $r1 0
  &:before
    pseudo(block, absolute)
    width 1px
    height 70px
    background rgba(95, 128, 165, .15)
    left -29px
    top -22px
    +mob()
      display none
  li
    a
      display flex
      align-items center
      color $blue-dark3
      fw(700)
      svg
        mr($r13)
        g
          fill $blue-dark3
      &:hover
        co($blue-light-back4)
        svg g
          fill $blue-light-back4

.ul-social
  display flex
  flex-wrap wrap
  pt($r3)
  mb($r40)
  +mob()
    mt($r43)
  li
    width 100%
    display flex
    align-items center
    mb($r10)

    a
      display flex
      align-items center
      color $white
      fs($e14)
      svg
        margin-right $r12
        g
          fill $white
      &:hover
        color $blue
        svg g
          fill $blue


