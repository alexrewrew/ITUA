textarea
  -webkit-appearance none
  resize none
  bg($blue-light-back5)
  mb(r(30))
  fs(e(14))
  color #053a78
  border none
  border-radius: 0;
  width 100%
  height 120px
  padding r(11) r(24) r(13) r(24)
  trans()
  &:focus
    outline none
  +placeholder()
    co(#c5cbd1)
  trans()

.input-group
  position relative
  input, textarea
    mb(0)
    &.error
      box-shadow: inset 0px 0px 0px 2px rgba(255, 63, 90, 1);
      & ~ .input-error
        display block
  button
    position absolute
    left 0
    top 0
    bottom 0
    display flex
    align-items center
    justify-content center
    padding 0
    width 45px
    bg($tr)
  .input-error
    padding r(2) r(20) r(4)
    text-align center
    min-width 55%
    position absolute
    z-index 3
    top 100%
    right 0
    color $wt
    fs(e(12))
    bg($red)
    display none
  &.input-group-blue
    button
      background $blue
      height 100%
      width 50px
      position absolute
      top 0
      right 0
      left auto
      display flex
      align-items center
      justify-content center
      svg
        width 20px
        height 20px
      &:after
        pseudo(block, absolute)
        bottom 0px
        top 50%
        left 6px
        right 6px
        z-index -1
        trans()
      &:hover
        co($blue-light8)
        bg($blue3)
        &:after
          box-shadow: 0px 0px 17px 6px rgba(20, 114, 255, 0.7);

