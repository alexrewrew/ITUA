@import '../../utilities/utilities'

nav
  bg($wt)
  position fixed
  top 0
  left 0
  right 0
  z-index 8999
  trans()
  +port()
    .container
      max-width 100%
  +mob()
    height 59px

nav.nav-index.unscrolled
  bg($tr)
  .link-logo
    svg
      g, path, polygon
        fill $wt
  .nav-top
    border-bottom-color $wt30

  .nav-icon
    &:before
      bg($wt30)
    span
      bg($wt)


  +mmin(768px)
    .menu li a
      co($wt60)
      &:hover
        co($blue-dark4)

    .ul-lang li a
      co($wt30)
      &.active, &:hover
        co($wt)
    .form-search
      .input-group
        input
          bg($wt15)
          co($wt)
          +placeholder()
            co($wt)
        span
          svg g
            fill $wt
    .ul-login
      &:before
        bg($wt30)
      li a
        co($wt)
        svg g
          fill $wt
        &:hover
          co($wt30)
          svg g
            fill: $wt30;
    .menu li.dropdown
      ul
        bg($blue-light6)

.nav-top
  padding r(22) 0 r(12)
  border-bottom 1px solid rgba(95, 128, 165, .15)
  +mob()
    padding r(14) 0 r(8)
    height 59px

.nav-bottom
  pt(r(15))
  trans()
  +mob()
    bg($blue-light6)
    pt(r(20))
    transform translate3d(0, -180vh, 0)

.menu
  df(row)
  justify-content space-between
  align-items center
  height 100%
  +mob()
    flex-wrap wrap
    pl(r(19))
    pt(r(39))
  +xxl()
    max-width 75%
  li
    position relative
    +mob()
      width 100%
    a
      display block
      fs(e(13))
      pb(r(16))
      co($blue-dark5)
      +port()
          pr(r(10))
          pl(r(10))
          text-align center
      +mob()
        fs(e(17))
      &:hover
        co($blue-light-back4)
    &.dropdown
      +port()
        height 100%
      +mob()
        position static
      .dropdown-link
        +port()
          display flex
          align-items center
          height 100%
        +mob()
          position relative
          &:before, &:after
            pseudo(block, absolute)
            height 2px
            width 7px
            bg($blue-light-back4)
            right 12px
            top 13px
          &:before
            transform rotate(45deg)
            top 9px
          &:after
            transform rotate(-45deg)

      ul
        position absolute
        margin 0
        padding: r(23) r(14) r(19)
        bg($blue-light-back3)
        width 180px
        left: -14px;
        top: 100%
        trans()
        visibility hidden
        opacity 0
        z-index -1
        +port()
          width 140px
        +mob()
          top 35px
          width 100vw
          left 0
          right 0
          bottom 0
          transform translate3d(100vw, 0, 0)
          padding r(5) r(34) r(19)
        li
          mb(r(15))
          a
            pb(0)
            text-align left
            +port()
              pr(r(10))
              pl(0)
          &.dropdown-back
            display none
            +mob()
              display block
              a
                position relative
                co($blue-dark4)

                &:before, &:after
                  pseudo(block, absolute)
                  height 2px
                  width 7px
                  bg($blue-dark4)
                  left -19px
                  top 13px
                &:before
                  transform rotate(-45deg)
                  top 9px
                &:after
                  transform rotate(45deg)
        &.active
          z-index 7999
          visibility visible
          opacity 1
          +mob()
            transform none

.nav-mobile
  display none
  +mob()
    display block

.nav-icon
  width 26px
  height 23px
  position relative
  margin r(3) r(11)
  cursor pointer
  trans()
  transform rotate(0deg)
  float right
  span
    display block
    position absolute
    height 3px
    width 100%
    bg($blue-dark3)
    border-radius 2px
    opacity 1
    left 0
    transform rotate(0deg)
    trans()
    &:nth-child(1)
      top 0
    &:nth-child(2), &:nth-child(3)
      top 10px
    &:nth-child(4)
      top 20px
  &:before
    pseudo(block, absolute)
    width 1px
    height 58px

    background rgba(95,128,165,.15)
    left: -27px;
    top: -17px;


#nav-list
  display flex
  justify-content space-between
  pr(r(20))
  pl(r(47))
  +xxl()
    pl(r(80))
  +port()
    pr(r(15))
    pl(r(25))
  +mob()
    display none
    padding 0 r(15)
    align-items center

#nav-logo
  animation: ds-none .2s both;


@keyframes ds-none {
  0% {
    opacity: 0;
  }
}

