.member
  display block
  border-top solid 1px $blue-light5
  border-bottom solid 1px $blue-light5
  border-left solid 1px $blue-light5
  margin-bottom -1px
  margin-right -1px
  box-shadow: 1px 0px 0px 0px rgba(226,232,238,1);
  padding $r24 $r29
  position relative
  height: 194px;
  trans()
  &--image
    height 54px
    margin-bottom $r20
    img
      max-height 100%
  &--tags
    display flex
    flex-wrap wrap
    padding-left 1px
    padding-top 1px
    li
      border 1px solid $blue-light5
      font-size: $e12
      line-height: 1.33;
      text-align center
      color $blue-light5
      padding $r3 $r13 $r4
      margin-top: -1px
      margin-left: -1px
  &:hover
    box-shadow: 0 10px 30px 0 rgba(94, 107, 126, 0.3);
    background $white
    border-color $trans