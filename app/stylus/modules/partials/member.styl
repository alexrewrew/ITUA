.member
  display block
  border-top solid 1px $blue-light5
  border-bottom solid 1px $blue-light5
  border-left solid 1px $blue-light5
  margin-bottom -1px
  //margin-right -1px
  box-shadow: 1px 0px 0px 0px rgba(226, 232, 238, 1);
  padding $r31 $r35
  position relative
  height: 294px;
  width 293px !important
  trans()
  &--image
    height 90px
    margin-bottom $r25
    img
      max-height 100%
      max-width 100%
  p
    fs($e12)
  &--tags
    display flex
    flex-wrap wrap
    padding-left $r5
    padding-top 1px
    li
      border 1px solid $blue-light5
      font-size: $e12
      line-height: 1.33;
      text-align center
      color $blue-light5
      padding $r3 $r13 $r4
      margin-top: -1px
      margin-left: -1px

  .btn-more
    position absolute
    bottom -1px
    left -1px
    padding-left $r38

  &:hover
    box-shadow: 0 10px 30px 0 rgba(94, 107, 126, 0.3);
    background $white
    border-color $trans

.member.member-regular
  padding $r24 $r33
  height: 194px;
  .member--image
    height 54px
    margin-bottom $r21
  .btn-more

    bottom: 2px;
    left: 6px
    fs($e14)
    color $white
  &:hover
    .btn-more
      background $trans
      color $blue
      max-width calc(100% - 19px)
      pl($r30)
      svg
        opacity 1
        g
          fill $blue