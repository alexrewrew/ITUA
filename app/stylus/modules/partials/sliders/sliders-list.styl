.slider-calendar
  padding-top $r20
  mb($r71)
  +mob()
    margin: 0 -15px 50px;
    pt(0)
  +land()
    margin: 0 -30px $r50;
    padding-bottom: $r43
    .slick-track
      left: 15px;
  .slick-list
    &:after, &:before
      background: rgba(255, 255, 255, 1);
    &:before
      background: linear-gradient(to right, rgba(230, 235, 239, 1) 0%, rgba(230, 235, 239, 0) 100%);
    &:after
      background: linear-gradient(to right, rgba(230, 235, 239, 0) 0%, rgba(230, 235, 239, 1) 100%);

.slider-middle
  height 427px
  +mob()
    height: 257px;
  .arrow
    background $white
    svg g
      fill $blue

    &.left
      left -82px
      +mob()
        right 79px
        left auto
      +land()
        left -64px
    &.right
      left 0
      +mob()
        right 15px
        left auto
        background $trans
      +land()
        left 0
    &:hover
      background $blue-light6

  .slide
    height 427px
    display flex
    overflow hidden
    justify-content center
    align-items center
    img
      height 100%
      flex-shrink 0
      +land()
        height auto
      +mob()
        min-height: 100%;
        min-width: 100%;
    +mob()
      height 210px
    +land()
      height 257px

.slider-header
  height 390px
  .arrow
    background $trans
    border-color $blue-light11
    svg g
      fill $white
    &.right
      background $blue-light12
      +mob()
        background $trans
      +land()
        background $blue-light12
      &:hover
        background $blue-light6
  .slide
    height 390px
    +mob()
      height 342px
    +land()
      height 390px

.slider-about
  &.slider-with-line.slider-with-line-sync
    .blog.blog-about
      margin 0 $r15
    .slick-track
      padding-top 0
      padding-bottom: 0;

      pb(0)
      +port()
        left: 23px;
      +mob()
        left 0

