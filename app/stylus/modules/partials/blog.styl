.blog
  display block
  position relative
  mb($r69)
  +mob()
    mb(0)
  &--image
    height 173px
    display flex
    align-items center
    justify-content center
    margin-bottom ($r37)
    background $white
    overflow hidden
    +tab()
      height 191px
    +port()
      height: 218px;
    img
      height 100%
      trans()
      flex-shrink 0
      +mob()
        min-width 100%
        height auto
  &--date
      position absolute
      bottom: 15px;
      right: 13px;
      font-size: $e14
      font-weight: bold;
      color: $blue-light
      font-family $a-font, sans-serif
  &--description
    mb($r35)
  &:hover
    .blog--image
      img
        opacity .4
    .btn-more
      background $blue
      color $white
      max-width 100%
      pl($r30)
      svg
        opacity 1

  &.blog-advantage
    mb($r64)

    .blog--image
      height 225px
      mb($r39)
      +mob()
        min-height 181px
        mb($r37)
        img
          width 100%
      +land()
        img
          width auto
    .blog--description
      mb(0)
      h3
        line-height: 1.3;
        color $blue-dark2
        fs($e20)
        mb($r27)
        +mob()
          mb($r24)

  &.blog-about
    max-width 360px
    mb(0)
    +tab()
      max-width 290px
    +port()
      max-width 330px
    +mob()
      max-width 263px
    .blog--image
      height 280px
      mb($r41)
    .blog--description
      mb($r33)


  &.blog-chief
    mb($r41)
    .blog--image
      height 181px
      mb($r40)
      +mob()
        mb($r25)
    h3
      fs($e20)
      mb($r32)
      +mob()
        mb($r13)
    &.blog-chief-small
      mb($r83)
      +mob()
        mb($r41)
      h3
        mb($r12)
    &:hover
      .blog--image
        img
          opacity 1





