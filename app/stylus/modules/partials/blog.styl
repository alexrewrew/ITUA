.blog
  display block
  position relative
  mb($r65)
  &--image
    height 173px
    display flex
    align-items center
    justify-content center
    margin-bottom 37px
    background $white
    overflow hidden
    img
      min-height 100%
      trans()
  &--description
    p
      font-size $e14
      line-height: 1.57;
      color $black-text
  &--date
      position absolute
      bottom: 15px;
      right: 13px;
      font-size: $e14
      font-weight: bold;
      color: $blue-light
      font-family $a-font, sans-serif
  &:hover
    .blog--image
      img
        opacity .4

.blog.blog-advantage
  .blog--image
    height 224px
    mb($r39)
  .blog--description
    h3
      line-height: 1.3;
      color $blue-dark2
      fs($e20)
      mb($r28)
