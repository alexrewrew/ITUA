@import '../../utilities/vars'
@import '../../utilities/mixins'

html
  font-size 16px

html, body
  overflow-x hidden

body
  font($r16, 400, normal)
  color $black
  font-family $m-font, sans-serif
  background $white

+dis()
  .container
    max-width 1170px !important

  //.container.container-1300
  //  max-width 1300px !important
  .container.container-slider
    max-width calc(1170px + 273px + 273px + 30px) !important

+xxl()
  .container.container-big
    max-width 1500px !important



html.open
  overflow hidden !important
  height 100vh

body.open
  overflow hidden !important
  .nav-icon
    &:before
      bg(rgba(255, 255, 255, .3))
    span
      bg($white)
      &:nth-child(1)
        top 20px
        width 0
        left 50%
      &:nth-child(2)
        transform rotate(45deg)
      &:nth-child(3)
        transform rotate(-45deg)
      &:nth-child(4)
        top 20px
        width 0
        left 50%

  #nav-logo
    display none

  #nav-list
    display flex
    animation: ds-none .2s both;

  .nav-top
    background $blue-light6
    border-bottom-color: rgba(255, 255, 255, .3);

  .nav-bottom
    transform none
    overflow-x: hidden;

  nav
    height 100%
    overflow scroll !important
    background-color $blue-light6 !important

.col-detail
  +mob()
    text-align center
