.breadcrumbs
  df(row)
  mb(r(46))
  mt(r(13))
  line-height: 1.67
  +mob()
    mt(r(2))
    mb(r(40))

  li
    mr(r(4))
    &:last-child
      to()
      a
        &:after
          display none

    a
      display inline-block
      co($blue-light10)
      fs(e(12))
      line-height: 1.67;
      position relative
      pr(r(8))
      &:after
        content '/'
        display block
        position absolute
        right 0
        bottom 0
        co($blue-light10)
      &:hover
        co($blue)
        &:after
          co($blue-light10)

