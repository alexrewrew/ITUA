

blockquote
  padding r(94) 0 r(79)
  position relative
  z-index 10
  mb(r(100))
  +xs()
    pl(r(25))
    pb(r(115))
    pt(r(112))
    pr(r(3))
    padding r(112) r(3) r(141) r(25)
  +land()
    margin: 0 65px;
  &:after
    pba()
    top 0
    width 200vw
    left -100vw
    bottom 0
    bg(#f7f8f9)
    z-index: -1


  p
    color $blue
    font-weight: bold;
    line-height 1.63
    fs(e(16))
    position relative
    //+xs()
    //  mb(r(49))
    &:before, &:after
      position absolute
      display block
      line-height 1
      color $blue
      fw(700)
      fs(e(70))
    &:before
      content '«'
      left -68px
      top -23px
      z-index 10
      +xs()
        top: -67px;
        left: -27px;
    &:after
      content '»'
      right -68px
      bottom -23px
      z-index 10
      +xs()
        bottom: -62px;
        right: -5px;

  .blockquote-author
    position absolute
    bottom 0
    left 0
    font-size: e(14)
    line-height: 1.57;
    color: #768190;
    mb(r(13))
    +xs()
      left 25px
      mb(r(28))



