.chosen-rtl .chosen-search input[type="text"],
.chosen-container-single .chosen-single abbr,
.chosen-container-single .chosen-single div b,
.chosen-container-single .chosen-search input[type="text"],
.chosen-container-multi .chosen-choices .search-choice .search-choice-close,
.chosen-container .chosen-results-scroll-down span,
.chosen-container .chosen-results-scroll-up span {
  background-image: url("../img/chosen/chosen-sprite.png") !important;
}

@media only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (min-resolution: 144dpi), only screen and (min-resolution: 1.5dppx) {
  .chosen-rtl .chosen-search input[type="text"],
  .chosen-container-single .chosen-single abbr,
  .chosen-container-single .chosen-single div b,
  .chosen-container-single .chosen-search input[type="text"],
  .chosen-container-multi .chosen-choices .search-choice .search-choice-close,
  .chosen-container .chosen-results-scroll-down span,
  .chosen-container .chosen-results-scroll-up span {
    background-image: url("../img/chosen/chosen-sprite@2x.png") !important;
  }
}

.chosen-container
  width 100%
  mb(0)
  fs(r(16))
  padding-bottom 1px
  &:before
    pba()
    left -15px
    right -15px
    top 0
    bottom 0
    background #E9EDF3
    opacity 0
    visibility hidden
    trans()

  &:after
    triangle($blue, down, 4px)
    top: calc(50% - 4px);
    right: 18px;
    trans()

  &:focus
    outline none

  .chosen-single
    padding 0
    height auto

    border-radius 0
    border none
    border-bottom 2px solid $blue

    background none
    box-shadow none
    trans()
    span
      color $blue
      bg($tr)
      padding r(7) r(19) r(10)
      fs(e(14))
    input[type='text']
      display none
      mb(0)


  .chosen-default
    span
      opacity .5

.chosen-container-single
  .chosen-search
    padding 0 r(5)
    mb(r(12))
    input[type='text']
      display none
      mb(0)
      fs(e(16))
      border 1px solid #ccc
      padding r(11) r(10) r(12)
      background-image none !important

.chosen-container.chosen-with-drop
  &:before
    opacity 1
    visibility visible
  &:after
    transform rotate(180deg)
  .chosen-single
    background #E9EDF3

.chosen-container.chosen-container-active
  box-shadow none

  .chosen-single
    border 0
    border-bottom 2px solid $blue
    box-shadow none


.chosen-container-single .chosen-drop
  animation: ds-none .2s both;
  border-radius 0
  background #E9EDF3
  border none
  box-shadow none

  left -15px
  right -15px
  width calc(100% + 30px)

  .chosen-results
    padding 0
    margin 0
    box-shadow none

    .active-result
      padding r(9) r(34) r(11)
      fs(e(14))
      line-height normal
      co(#264A75)
    .active-result.highlighted
      background #E0E4EC
    .result-selected
      display none

.chosen-container-single .chosen-single div b
  display none

.chosen-container
  .chosen-results
    li.no-results
      bg($wt)
      co(#999)
      fs(e(14))
      padding r(12) r(10) r(13)