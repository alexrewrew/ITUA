input
  -webkit-appearance none
  width 100%
  border none
  border-radius: 0
  fs(e(14))
  bg($blue-light-back5)
  mb(r(30))
  color #053a78
  padding r(11) r(24) r(13) r(24)
  trans()
  &:-webkit-autofill
    -webkit-box-shadow: inset 0 0 0 50px #fff !important
    -webkit-text-fill-color: #999 !important
  &:focus
    outline none
  +placeholder()
    co(#c5cbd1)
    trans()

  &.input-blue
    border-bottom 2px solid $blue
    color: $blue
    font-size: e(14)
    line-height: 1.57;
    bg($tr)
    pb(r(11))
    pl(r(19))
    pt(r(9))
    +placeholder()
      color $blue

