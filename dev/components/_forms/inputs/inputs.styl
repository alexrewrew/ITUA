textarea
  -webkit-appearance none
  resize none
  bg($blue-light-back5)
  mb(r(30))
  fs(e(14))
  color #053a78
  border none
  border-radius: 0;
  width 100%
  height 120px
  padding r(11) r(24) r(13) r(24)
  trans()
  &:focus
    outline none
  +placeholder()
    co(#c5cbd1)
  trans()


