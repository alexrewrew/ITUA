.slider-calendar
  padding-top r(20)
  mb(r(71))
  +mob()
    margin: 0 -15px r(50);
    pt(0)
  +land()
    margin: 0 -30px r(50);
    padding-bottom: r(43)
    .slick-track
      left: 15px;
  .slick-list
    &:after, &:before
      background: rgba(255, 255, 255, 1);
    &:before
      background: linear-gradient(to right, rgba(230, 235, 239, 1) 0%, rgba(230, 235, 239, 0) 100%);
    &:after
      background: linear-gradient(to right, rgba(230, 235, 239, 0) 0%, rgba(230, 235, 239, 1) 100%);
  &.slider-calendar-year
    +tab()
      margin-left -15px
      margin-right -15px
    .slick-list
      &:after, &:before
        background: rgba(255, 255, 255, 1);
      &:before
        background: linear-gradient(to right, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0) 100%);
      &:after
        background: linear-gradient(to right, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);