mixin slider-events-year-header-item(img, date, time, heading, text)
    .row.row-events-year-slide
        .slider-color--col.offset-xl-1.col-xl-5.col-md-6
            .row-events-year-slide--image
                +img(img)
        .slider-color--col.offset-lg-1.col-xl-4.col-lg-5.col-md-6
            .slider-events-slide
                ul.ul-slider-events-date
                    li= date
                    li= time
                .slider-events-slide--description
                    h2= heading
                    p= text
                +btn-arrow('Перейти до події')