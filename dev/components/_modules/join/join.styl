.join
  pt(r(30))
  +mob()
    pt(r(80))
    pb(r(16))
  +land()
    pt(0)
  &--block
    position relative
    mb(r(20))
    +port()
      height 431px
      overflow hidden
    +mob()
      height 410px
      overflow hidden
      mb(r(15))
      &:after
        pba()
        bottom 0
        left 0
        right 0
        height: 224px
        background: linear-gradient(to bottom, rgba(245,246,247,0) 0%, rgba(245,246,247,1) 55%, rgba(245,246,247,1) 100%);
        z-index 1
    &-image
      width 100%
    p
      color: $blue-dark2
      position absolute
      bottom 0
      left 0
      right 0
      padding r(37) r(20)
      margin-bottom 0
      +tab()
        padding r(32) r(15)
      +port()
        padding r(25) r(15)
      +mob()
        padding r(25) r(55) r(25) r(20)
        z-index 2