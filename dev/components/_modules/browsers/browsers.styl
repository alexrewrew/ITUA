
body.brow-firefox
  .member
    &:hover
      box-shadow: 0 10px 15px 0 rgba(94, 107, 126, 0.3);

body.brow-safari
  .member
    &:hover
      box-shadow: 0 10px 15px 0 rgba(94, 107, 126, 0.3);

  .btn:after, .comment--right .btn-more:after
    bottom 12px
    background $tr
    filter none
    height 0
    left 26px
    right 26px
    box-shadow: 0px 0px 20px 12px rgba(20, 114, 255, 1);
    z-index -1

body.brow-msedge
  .btn:after, .comment--right .btn-more:after
    bottom 12px
    background $tr
    filter none
    height 0
    left 26px
    right 26px
    box-shadow: 0px 0px 20px 12px rgba(20, 114, 255, 1)
    z-index -1

  .btn-more
    max-width 100%
    svg
      top 18px

  .member.member-regular:hover .btn-more
    max-width 100%

  .btn-arrow-slider
    max-height 62px
    pt(r(18))
    pb(r(21))

  .news-big h3
    fs(e(24))

  .news-big .btn
    max-height 42px
    pt(r(8))
    pb(r(11))

  .search-block--button .btn svg
    top 4px

  @keyframes swim
    0%
      transform translate(6px, 6px) rotate(20deg)
    100%
      transform translate(-6px, -6px) rotate(-20deg)

body.brow-msie

  .calendar--mark-text::after, .calendar--mark-event::after
    bottom -6px

  .btn:after, .comment--right .btn-more:after
    bottom 12px
    background $tr
    filter none
    height 0
    left 26px
    right 26px
    box-shadow: 0px 0px 20px 12px rgba(20, 114, 255, 1)
    z-index -1

  .comment--left
    flex 0 0 150px

  .comment--right
    height 285px

  .btn-more
    //max-width 100%
    svg
      top 18px

  .video-block--play
    left calc(50% - 45px)

  #to-next-month
    svg
      top 0


