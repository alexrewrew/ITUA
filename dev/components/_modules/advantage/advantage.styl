.blog
  &.blog-advantage
    mb(r(64))
    &:hover
      .blog--image
        img
          opacity 1
    .blog--image
      height 225px
      mb(r(39))
      +mob()
        height 181px
        mb(r(37))
        align-items flex-end
      img
        flex 0 0 auto
    .blog--description
      mb(0)
      h3
        line-height: 1.3;
        co($blue-dark2)
        fs(e(20))
        mb(r(27))
        +mob()
          mb(r(19))


.ul-advantage-contacts
  display flex
  justify-content space-between
  max-width 376px
  +xs()
    flex-direction column
  li
    +xs()
      mb(r(20))
    a
      fs(e(14))
      display flex
      align-items center
      fw(700)
      svg
        mr(r(13))
      span
        text-decoration underline