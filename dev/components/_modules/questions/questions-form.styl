.form-questions
  display flex
  justify-content space-between
  flex-wrap wrap
  position relative
  +mob()
    pb(r(20))

  h2
    max-width 100%
    width 100%

  .input-group
    flex 1 1 calc(50% - 15px)
    max-width calc(50% - 15px)
    mb(r(30))
    +mob()
      flex 1 1 100%
      max-width 100%
      mb(r(22))
    input
      &:focus
        bg($wt)
        box-shadow: inset 0px 0px 0px 2px rgba(24, 111, 240, 1);
        +placeholder()
          co(#e8ecf1)
    textarea
      &:focus
        bg($wt)
        box-shadow: inset 0px 0px 0px 2px rgba(24, 111, 240, 1);
        +placeholder()
          co(#e8ecf1)
  .input-group.textarea-group
    flex 1 1 100%
    max-width 100%
    height 120px
    margin-bottom: r(34)

.form-questions-success
  position absolute
  left 15px
  right 15px
  top 0
  img
    margin 0 auto r(27)
    display block
  h2
    margin-bottom r(27)
  p
    mb(r(69))
  .btn--text
    fs(e(20))
    letter-spacing: 1px;
    pt(r(13))
    pb(r(16))

.form-questions
  trans()
  &.hidden
    opacity 0
    visibility hidden

.form-questions-success
  animation ds-none .2s both
  &.hidden
    display none


