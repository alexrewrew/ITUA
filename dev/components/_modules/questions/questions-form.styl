.form-questions
  display flex
  justify-content space-between
  flex-wrap wrap
  +mob()
    pb(r(20))

  .input-group
    flex 1 1 calc(50% - 15px)
    max-width calc(50% - 15px)
    mb(r(30))
    +mob()
      flex 1 1 100%
      max-width 100%
      mb(r(22))
    input
      &:focus
        bg($wt)
        box-shadow: inset 0px 0px 0px 2px rgba(24, 111, 240, 1);
        +placeholder()
          co(#e8ecf1)
    textarea
      &:focus
        bg($wt)
        box-shadow: inset 0px 0px 0px 2px rgba(24, 111, 240, 1);
        +placeholder()
          co(#e8ecf1)
  .input-group.textarea-group
    flex 1 1 100%
    max-width 100%
    height 120px
    margin-bottom: r(34)
