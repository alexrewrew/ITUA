.btn
  display block
  max-width 320px
  width 100%
  text-align center
  position relative
  z-index 40
  trans()
  &--text
    bg($blue)
    co($wt)
    letter-spacing: 1px;
    font-family $a-font, sans-serif
    fw(700)
    padding r(19) 0 r(21)
    position relative
    z-index 40
    trans()
    svg
      width 20px
      position absolute
      top calc(50% - 9px)
      right: 36px;
      trans()
      g
        trans()

  &--shadow
    position absolute
    box-shadow: 0px 0px 34px 11px rgba(20, 114, 255, 0.7);
    left 16px
    right 16px
    bottom 0
    z-index -1
    trans()
  &:hover
    +mmin(768px)
      .btn--text
        co($blue-light8)
        bg($blue3)
        svg
          transform translateX(5px)
      .btn--shadow
        box-shadow: 0px 0px 34px 11px rgba(24, 110, 240, .7)
        transform translate3d(0, -6px, 0)

  &.btn-more
    position absolute
    bottom 0
    left 0
    max-width 50%
    +mob()
      max-width 234px
    .btn--text
      letter-spacing: 1.5px
      font-family $a-font, sans-serif
      pt(r(16))
      pb(r(15))
      fs(e(14))
      bg($tr)
      co($blue)
      text-align left
      +port()
        pl(r(25))
      +mob()
        pl(r(24))
        pb(r(23))
      svg
        opacity 0
        +mob()
          opacity 1
          g
            fill $blue
    .btn--shadow
      opacity 0

  &.btn-footer
    max-width 196px
    +mob()
      max-width 100%
    .btn--text
      fs(e(14))
      letter-spacing: 2.3px;
      pt(r(19))
      pb(r(17))
    .btn--shadow
      box-shadow: 0px 0px 34px 11px rgba(13, 47, 97, 1);

  &.btn-arrow
    .btn--text
      text-align left
      font-family $a-font, sans-serif
      pl(r(46))
      svg
        opacity 1
        g
          fill $wt
    &:hover
      +mmin(768px)
        .btn--text
          svg g
            fill $blue-light8

  &.btn-arrow-slider
    position absolute
    bottom: 0
    left calc(1410px - 34.2%)
    max-width: 360px;
    +port()
      left auto
      right 15px
    +tab()
      left: calc(1006px - 34.5%);
      max-width 300px
    +mob()
      position relative
      left 0
      max-width 100%
      bottom -80px
      mb(r(80))
    +land()
      position absolute
      left auto
      right 15px
      max-width 300px
      bottom 0
      mb(0)
    .btn--text
      letter-spacing .55px
      fs(e(18))
      pb(r(24))
      pl(r(38))
      +land()
        fs(e(16))
        padding r(15) r(36) r(17)

  &.btn-pdf
    .btn--text
      fs(e(14))
      pl(r(18px))
      pt(r(17))
      pb(r(19))
      svg
        right auto
        left: 55px;
        top: 12px;
        polygon, g
          transition .05s all ease
    +mmin(768px)
      &:hover
        .btn--text
          svg
            transform none
            g, polygon
              fill $blue-light8

  &.btn-plane
    max-width 360px
    mc()
    .btn--text
      fs(e(20))
      letter-spacing: 1px;
      pt(r(13))
      pb(r(16))
      pl(r(37))
      svg
        position relative
        right auto
        top 3px
        ml(r(15))
        trans()
        g
          trans()
    +mob()
      max-width 414px

    &:hover
      +mmin(768px)
        svg
          transform translate3d(15px, 0, 0)
          g
            opacity 1

btn-more-hover()
  .btn-more
    max-width 100%
    .btn--text
      background $blue
      co($wt)
      pl(r(30))
      +port()
        pl(r(25))
      svg
        opacity 1
    .btn--shadow
      opacity .7

btn-more-member()
  .btn-more
    left -1px
    bottom -1px
    .btn--text
      pl(r(38))
      +mob()
        pl(r(24))

btn-more-member-hover()
  .btn-more
    max-width calc(100% + 2px)
    .btn--text
      background $blue
      co($wt)
      pl(r(38))
      width: calc(100% + 2px);

      +port()
        pl(r(25))
      svg
        opacity 1
    .btn--shadow
      opacity .7

.btn-share
  display flex
  align-items center
  justify-content center
  max-width 165px
  width 100%
  color $blue
  box-shadow: 0 10px 30px 0 rgba(94, 107, 126, 0.3);
  bg($wt)
  font-family $a-font, sans-serif
  font-size: e(16)
  font-weight: 700;
  line-height: 1.38;
  pt(r(13))
  pb(r(14))
  +xs()
    max-width 100%
    mb(r(46))
  svg
    margin-right r(11)
    g
      fill $blue
  &:hover
    color $blue
    box-shadow 0 4px 10px 0 rgba(94, 107, 126, 0.3)

  &.hide
    display none


