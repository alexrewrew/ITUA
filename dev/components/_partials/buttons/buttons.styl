button
  border none
  cursor pointer
  trans()
  &:focus
    outline none

.btn
  display block
  max-width 320px
  width 100%
  text-align center
  bg($blue)
  co($wt)
  letter-spacing: 1px;
  font-family $a-font, sans-serif
  fw(700)
  padding r(19) 0 r(21)
  position relative
  z-index 40
  +mob()
    fs(e(20))
    padding r(17) 0 r(19)
    max-width 100%

  &:after
    pseudo(block, absolute)
    bottom 0px
    left 16px
    right 16px
    box-shadow: 0px 0px 34px 11px rgba(20, 114, 255, 0.7);
    z-index -1
    trans()
    +mob()
      left 25px
      right 25px

  &:hover
    co($blue-light8)
    bg($blue3)
    &:after
      box-shadow: 0px 0px 34px 11px rgba(24, 110, 240, .7)
      transform translate3d(0, -6px, 0)

.btn-center
  mc()

.btn-more
  display inline-block
  width 100%
  max-width 50%
  position relative
  align-items center
  letter-spacing: 0.5px;
  font-family $a-font, sans-serif
  co($blue)
  fs(e(16))
  fw(700)
  padding: r(13) 0 r(15)
  trans()
  +mob()
    padding: r(16) 0 r(18)
  svg
    position absolute
    top 15px
    right 30px
    opacity 0
    height 12px
    width 20px
    trans()
    +mob()
      top 20px
  &:hover
    bg($blue)
    co($wt)
    max-width 100%
    pl(r(30))
    svg
      opacity 1

.btn-arrow
  padding r(22) r(38) r(24)
  text-align left
  position relative
  max-width 360px
  +port()
    max-width 300px
  +mob()
    padding r(21) r(36) r(23)
    fs(e(18))
    letter-spacing .6px
  svg
    position absolute
    right 38px
    top 22px
    max-width 19px
    width 100%
    trans()
    g
      transition .1s all ease
    +mob()
      right 30px
  &:hover
    svg
      transform translate3d(10px, 0, 0)
      g
        fill $blue-light8

.btn-arrow.btn-arrow-slider
  position absolute
  bottom: 0
  left calc(1410px - 34.2%)
  +port()
    left auto
    right 15px
  +tab()
    left: calc(1006px - 34.5%);
    max-width 300px
  +mob()
    position relative
    left 0
    max-width 100%
    bottom -80px
    mb(r(80))
  +land()
    position absolute
    left auto
    right 15px
    max-width 300px
    fs(e(16))
    padding r(15) r(36) r(17)
    bottom 0
    mb(0)
    svg
      top 15px

.btn-small
  max-width 263px
  fs(e(20))
  letter-spacing: 1px;
  padding: r(16) r(5) r(20)

.btn-margin
  mt(r(73))

.btn-plane
  svg
    trans()
    g
      trans()
  &:hover
    svg
      transform translate3d(15px, 0, 0)
      g
        opacity 1

.btn-pdf
  pt(r(16))
  pb(r(18))
  letter-spacing: normal
  span
    position relative
    pl(r(18))
    svg
      position absolute
      left: -21px;
      top: -4px;
      g
        transition .05s all ease
  +mob()
    max-width 305px
  +land()
    margin  r(15) auto 0
  +xs()
    mc()
  &:hover
    svg g
      fill $blue-light8
