.video-block
  display flex
  justify-content center
  align-items center
  position relative
  &--play
    position absolute
    width: 90px;
    height: 90px;
    bg($blue)
    border-radius 50%
    display flex
    justify-content center
    align-items center
    pl(r(10))
    pb(r(2))
    z-index 30
    box-shadow: 0px 0px 34px 5px rgba(20, 114, 255, 0.7)
    trans()
    +xs()
      width 45px
      height 45px
      pl(r(5))
      pb(r(1))
    svg
      +xs()
        width 15px
  img
    trans()

  &:hover
    .video-block--play
      box-shadow: 0px 0px 34px 1px rgba(24, 110, 240, .7)
      transform rotate(360deg)
    img
      opacity .6