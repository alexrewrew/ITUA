// DISPLAY FLEX
df($direction)
  display flex
  if $direction == col
    flex-direction column

dfc()
  display flex
  justify-content center
  align-items center

// PSEUDO
pba()
  content: ''
  display: block
  position: absolute

// PSEUDO
pseudo($display, $position)
  content: ''
  display: $display
  position: $position

//  TRANSITIONS
trans()
  transition: all .2s ease

// TRIANGLE
triangle($colour, $direction, $rize)
  pba()
  width: 0
  height: 0
  if $direction == down
    border-left: $rize solid transparent
    border-right: $rize solid transparent
    border-top: $rize solid $colour
  else if $direction == up
    border-left: $rize solid transparent
    border-right: $rize solid transparent
    border-bottom: $rize solid $colour
  else if $direction == right
    border-top: $rize solid transparent
    border-bottom: $rize solid transparent
    border-left: $rize solid $colour
  else if $direction == left
    border-top: $rize solid transparent
    border-bottom: $rize solid transparent
    border-right: $rize solid $colour

// COLOR
co($txtcolor)
  color $txtcolor


// BACKGROUND COLOR
bg($bgcolor)
  background-color $bgcolor
